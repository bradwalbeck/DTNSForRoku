<?xml version="1.0" encoding="utf-8" ?>
<component name="EpisodeListItem" extends="Group">
    <interface>
        <field id="itemContent" type="node" />
    </interface>
    <children>
        <Poster
            id="poster"
            width="180"
            height="100"
            translation="[10, 10]"
            uri_bind_to_field="itemContent.hdPosterUrl"
        />
        <Label
            id="title"
            width="580"
            height="100"
            font="font:SmallBoldSystemFont"
            vertAlign="center"
            wrap="true"
            translation="[210, 10]"
            text_bind_to_field="itemContent.title"
        />
    </children>
</component>