<?xml version="1.0" encoding="utf-8" ?>
<component name="DetailsView" extends="Group">
    <interface>
        <field id="content" type="node" />
    </interface>
    <children>
        <Poster 
            id="poster"
            width="960"
            height="540"
            uri_bind_to_field="content.hdPosterUrl"
        />
        <Label
            id="title"
            width="960"
            font="font:LargeBoldSystemFont"
            wrap="true"
            translation="[0, 560]"
            text_bind_to_field="content.title"
        />
        <Label
            id="description"
            width="960"
            height="250"
            font="font:SmallSystemFont"
            wrap="true"
            translation="[0, 640]"
            text_bind_to_field="content.description"
        />
    </children>
</component>